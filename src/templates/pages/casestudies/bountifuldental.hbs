        if(window.isDesktop === true) {
            jQuery(window).on('scroll', function(){
                bgParallax('#bdental-hero', 0.5, 'down');
                //bgParallax('#bdental-website', 0.35, 'down');
                scrollDarken('#bdental-hero .color-overlay');
            });
        }

        if(!window.isDesktop) {
            jQuery('.top-bar').addClass('light');
        }

        // jQuery(window).on('scroll', jQuery.throttle(400, throttledEvent));
